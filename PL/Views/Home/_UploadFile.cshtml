@{
    Layout = null;
}

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#uploadFileModal">Upload file</button>
<div class="modal fade" id="uploadFileModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a new folder</h4>
            </div>
            @using (Html.BeginForm("UploadFile", "Home", FormMethod.Post,
                    new { id = "uploadFileForm", enctype = "multipart/form-data" }
                    ))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.Label("file", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <input id="fileUpload" name="file" type="file" class="" />
                        </div>
                        @Html.Hidden("uriPath", ViewContext.RouteData.Values["path"])
                    </div>

                </div>
                <div class="divider">
                    <div class="form-group">
                        <input id="btnUploadFileSubmit" type="submit" class="btn btn-success col-md-offset-9" value="Upload" />

                        <button type="button" class="btn col-md-offset-0" data-dismiss="modal">Close</button>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
