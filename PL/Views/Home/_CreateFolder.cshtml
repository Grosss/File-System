@model PL.Models.DirModel
@{
    Layout = null;
}
<script>
    function OnSuccess() {
        $("myModal").modal("hide");
    }
</script>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Create folder</button>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a new folder</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("CreateFolder", "Home", FormMethod.Post, @*new { @class = "form-horizontal", role = "form" },*@ 
                    new AjaxOptions()
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                        UpdateTargetId = "explorerTable",
                        OnSuccess = "OnSuccess"
                    }))
                {
                    @Html.AntiForgeryToken()

                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Create" />
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <input id="btnSubmit" type="submit" class="btn btn-default" value="Create" />
                <button type="button" class="btn" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



